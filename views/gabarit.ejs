<!DOCTYPE html>
<html lang = "fr">
	<%- include('composants/head') %>
	<body>
		<%- include('composants/entete') %>

		<form id = "formAjouter" action = "/ajouter" method = "POST" >
			<input type = "text" placeholder = "Nom" name = "nom"> 
			<input type = "text" placeholder = "Prénom" name = "prenom">
			<input type = "text" placeholder = "Téléphone" name = "telephone">
			<input type = "email" placeholder = "courriel" name = "courriel">
			<input type = "submit" value = 'Ajouter'>
		</form>

		<form>
			<input type="texte" name="recherche">
			<input type="" name="">
		</form>

		<%- include('composants/form_post') %>
		<%- include('composants/adr') %>
		<%- include('composants/footer') %>

		<table id = "tableauNone" class = "tableau">
			<% let noLigne = 0 %>
				<% for(elm of adresse) { %>

				<% if(noLigne == 0) { %>
					<tr>
						<% noLigne++ %>
						<% for (p in elm) { %>
						<td><%= p %></td>
						<% } %>
					</tr>
				<% } %>
			
				<tr>
					<% for (p in elm) { %>
					<td><%= elm[p] %></td>
					<% } %>
				</tr>
			<% } %>
		</table>
	</body>
</html>